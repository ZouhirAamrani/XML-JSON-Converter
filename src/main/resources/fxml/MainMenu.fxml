<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.converter.controllers.MainMenuController">

    <stylesheets>
        <URL value="@../css/stylesMainMenu.css" />
    </stylesheets>

    <top>
        <Label alignment="CENTER" opacity="0.64" prefHeight="60.0" prefWidth="600.0" style="-fx-text-fill: #3a57e0;" styleClass="top-title" text="Convertisseur XML ↔ JSON" BorderPane.alignment="CENTER">
            <font>
                <Font name="Calibri Bold" size="33.0" />
            </font>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" style="-fx-spacing: 20;" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="53.0" prefWidth="400.0" style="-fx-spacing: 15; -fx-border-color: #2243e6; -fx-padding: 10; -fx-border-radius: 10;">
                    <children>
                        <Label styleClass="section-header" text="Choisissez le type de conversion :" />
                        
                        <RadioButton id="xmlToJsonRadio" mnemonicParsing="false" selected="true" text="XML → JSON" fx:id="xmlToJsonRadio">
                            <toggleGroup>
                                <ToggleGroup fx:id="conversionTypeGroup" />
                            </toggleGroup>
                        </RadioButton>
                        
                        <RadioButton id="jsonToXmlRadio" fx:id="jsonToXmlRadio" mnemonicParsing="false" text="JSON → XML" toggleGroup="$conversionTypeGroup" />
                    </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
                </VBox>
                
                <Separator maxWidth="400.0" prefWidth="400.0" />
                
                <VBox alignment="CENTER" prefHeight="115.0" prefWidth="560.0" style="-fx-spacing: 15; -fx-border-color: #2243e6; -fx-padding: 10; -fx-border-radius: 10;">
                    <children>
                        <Label styleClass="section-header" text="Choisissez la méthode de conversion :" />
                        
                        <RadioButton id="nativeMethodRadio" fx:id="nativeMethodRadio" mnemonicParsing="false" selected="true" text="Méthode Native (Java pur)">
                            <toggleGroup>
                                <ToggleGroup fx:id="conversionMethodGroup" />
                            </toggleGroup>
                        </RadioButton>
                        
                        <RadioButton id="jacksonMethodRadio" fx:id="jacksonMethodRadio" mnemonicParsing="false" text="Méthode Jackson (API)" toggleGroup="$conversionMethodGroup" />
                    </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <Button id="continueButton" fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinue" text="Continuer" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                 <javafx.geometry.Insets bottom="30.0" />
            </BorderPane.margin>
        </Button>
    </bottom>

</BorderPane>
